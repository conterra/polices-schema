{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://raw.githubusercontent.com/conterra/policies-json/1.0.0/schema/policies.schema.json",
    "definitions": {
        "id-name": {
            "type": "string",
            "pattern": "^[A-Za-z][A-Za-z0-9_-]*$"
        },
        "property-replacement-value": {
            "type": "string",
            "pattern": "^\\$\\{[A-Za-z][A-Za-z0-9_.-]*\\}$"
        },
        "non-empty-string": {
            "type": "string",
            "minLength": 1
        },
        "unique-string-array": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "#/definitions/non-empty-string"
            },
            "description": "String array."
        },
        "unique-non-empty-string-array": {
            "allOf": [
                {
                    "$ref": "#/definitions/unique-string-array"
                },
                {
                    "type": "array",
                    "minItems": 1
                }
            ],
            "description": "Non empty string array."
        },
        "policy-layers-type": {
            "$ref": "#/definitions/unique-non-empty-string-array",
            "description": "List of layer IDs to grant access to as defined by a map service. Supports individual IDs, intervals, or '*' for 'any layer'.",
            "examples": [
                [
                    "0",
                    "1"
                ],
                [
                    "*"
                ],
                [
                    "1-3"
                ]
            ]
        },
        "policy-roles-type": {
            "$ref": "#/definitions/unique-non-empty-string-array",
            "examples": [
                [
                    "enhancedSecurity_any",
                    "enhancedSecurity_authenticated",
                    "my-role"
                ]
            ],
            "description": "List of role IDs that should be able to access the defined layers."
        },
        "policy-restrictions-type": {
            "$ref": "#/definitions/unique-string-array",
            "examples": [
                [
                    "my-restriction"
                ]
            ],
            "description": "List of restriction IDs defined in the top-level 'restrictions' array of this file."
        },
        "policy-type": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "layers",
                "roles"
            ],
            "properties": {
                "layers": {
                    "$ref": "#/definitions/policy-layers-type"
                },
                "roles": {
                    "$ref": "#/definitions/policy-roles-type"
                },
                "restrictions": {
                    "$ref": "#/definitions/policy-restrictions-type"
                }
            },
            "examples": [
                {
                    "layers": [
                        "0"
                    ],
                    "roles": [
                        "my-role"
                    ]
                }
            ]
        },
        "restriction-type": {
            "type": "object",
            "oneOf": [
                {
                    "$ref": "#/definitions/spatial-restriction-type"
                },
                {
                    "$ref": "#/definitions/field-restriction-type"
                },
                {
                    "$ref": "#/definitions/feature-restriction-type"
                },
                {
                    "$ref": "#/definitions/readonly-restriction-type"
                }
            ]
        },
        "field-restriction-type": {
            "type": "object",
            "description": "A field restriction limiting access to available fields.",
            "additionalProperties": false,
            "required": [
                "type",
                "hiddenfields"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "const": "field"
                },
                "hiddenfields": {
                    "$ref": "#/definitions/unique-non-empty-string-array",
                    "description": "List of field names as defined for a map service layer or table."
                }
            }
        },
        "spatial-restriction-type": {
            "type": "object",
            "description": "A spatial restriction limiting access to a certain area.",
            "required": [
                "type",
                "featuretypeurl",
                "featurequery"
            ],
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "const": "spatial"
                },
                "featuretypeurl": {
                    "$ref": "#/definitions/non-empty-string",
                    "examples": [
                        "https://myserver:6443/arcgis/rest/services/folder1/service1/FeatureServer/0",
                        "/folder1/service1/FeatureServer/0"
                    ],
                    "description": "For 'spatial' type. URL that points to feature service layer. A relative reference is allowed."
                },
                "featurequery": {
                    "$ref": "#/definitions/non-empty-string",
                    "examples": [
                        "state = 'California'"
                    ],
                    "description": "For 'spatial' type. A definition query that selects the features of a feature layer."
                },
                "operation": {
                    "oneOf": [
                        {
                            "type": "string",
                            "enum": [
                                "intersect",
                                "within"
                            ]
                        },
                        {
                            "$ref": "#/definitions/property-replacement-value"
                        }
                    ],
                    "examples": [
                        "intersect",
                        "within"
                    ],
                    "description": "For 'spatial' type. One of 'intersect' or 'within'"
                }
            }
        },
        "feature-restriction-type": {
            "type": "object",
            "description": "A definition query restriction limiting access to features matching a certain query.",
            "additionalProperties": false,
            "required": [
                "type",
                "query"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "const": "feature"
                },
                "query": {
                    "$ref": "#/definitions/non-empty-string",
                    "description": "For 'feature' type. A definition expression (WHERE clause).",
                    "examples": [
                        "country = 'Germany'"
                    ]
                }
            }
        },
        "readonly-restriction-type": {
            "type": "object",
            "description": "A restriction forbidding write operations on features.",
            "additionalProperties": false,
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "const": "readonly"
                }
            }
        },
        "restriction-definitions-type": {
            "type": "object",
            "description": "Enumeration of restrictions by name. Can be referenced by policies.",
            "propertyNames": {
                "$ref": "#/definitions/id-name"
            },
            "additionalProperties": {
                "$ref": "#/definitions/restriction-type"
            },
            "examples": [
                {
                    "field_restriction_id": {
                        "type": "field",
                        "hiddenfields": [
                            "someField",
                            "someOtherField"
                        ]
                    },
                    "spatial_restriction_id": {
                        "type": "spatial",
                        "featuretypeurl": "https://myserver:6443/arcgis/rest/services/folder1/service1/FeatureServer/0",
                        "featurequery": "state = 'California'",
                        "operation": "intersect"
                    },
                    "feature_restriction_id": {
                        "type": "feature",
                        "query": "country = 'Germany'"
                    }
                }
            ]
        },
        "properties-type": {
            "type": "object",
            "description": "Enumeration of properties. Can by referenced as '${property_name}' in other values.",
            "additionalProperties": {
                "type": "string"
            },
            "propertyNames": {
                "$ref": "#/definitions/id-name"
            },
            "examples": [
                {
                    "propName": "propValue"
                }
            ]
        }
    },
    "type": "object",
    "required": [],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "properties": {
            "$ref": "#/definitions/properties-type"
        },
        "restrictions": {
            "$ref": "#/definitions/restriction-definitions-type"
        },
        "policies": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/policy-type"
            }
        }
    }
}